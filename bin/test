#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

./bin/clean-build

if [ -z "${BETTY_TEST_SKIP_SHELLCHECK-}" ]; then
  ./bin/test-shellcheck
fi
if [ -z "${BETTY_TEST_SKIP_RUFF-}" ]; then
  ./bin/test-ruff
fi
if [ -z "${BETTY_TEST_SKIP_MYPY-}" ]; then
  ./bin/test-mypy
fi
if [ -z "${BETTY_TEST_SKIP_STYLELINT-}" ]; then
  ./bin/test-stylelint
fi
if [ -z "${BETTY_TEST_SKIP_ESLINT-}" ]; then
  ./bin/test-eslint
fi
if [ -z "${BETTY_TEST_SKIP_BUSTED-}" ]; then
  ./bin/test-busted
fi
./bin/test-pytest
if [ -z "${BETTY_TEST_SKIP_PLAYWRIGHT-}" ]; then
  ./bin/test-playwright
fi
if [ -z "${BETTY_TEST_SKIP_PYINSTALLER-}" ]; then
  ./bin/test-build-pyinstaller
fi
./bin/test-build-setuptools

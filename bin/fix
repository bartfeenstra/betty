#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

# Fix Python code style violations.
autopep8 --in-place -r ./betty

# Fix CSS code style violations.
./node_modules/.bin/stylelint --fix "./betty/**/*.css"

# Fix JS code style violations.
./node_modules/.bin/eslint --fix -c ./betty/extension/webpack/assets/.eslintrc.yaml --ext .js --ext .ts --no-error-on-unmatched-pattern ./betty/extension/*/webpack
./node_modules/.bin/eslint --fix -c ./playwright/tests/.eslintrc.yaml --ext .js --ext .ts ./playwright/tests

#!/usr/bin/env bash

set -Eeuo pipefail

cd "$(dirname "$0")/.."

echo 'Running ESLint...'

./node_modules/.bin/eslint -c ./betty/extension/webpack/assets/.eslintrc.yaml --ext .js --ext .ts --no-error-on-unmatched-pattern ./betty/extension/*/webpack
./node_modules/.bin/eslint -c ./playwright/tests/.eslintrc.yaml --ext .js --ext .ts ./playwright/tests

{% extends 'base.html.j2' %}
{% set page_title = place.names | negotiate_localizeds %}
{% block page_content %}
    {% include 'meta/place.html.j2' %}

    {% set places = place | walk('encloses') | list %}
    {% if place.coordinates %}
        {% set places = places + [place] %}
    {% endif %}
    {% if places | length > 0 %}
        {% with place_context=place %}
            {% include 'list-place.html.j2' %}
        {% endwith %}
    {% endif %}

    {%- if 'betty.plugins.wikipedia.Wikipedia' in plugins %}
        {% with entity=place %}
            {% include 'wikipedia.html.j2' %}
        {% endwith %}
    {% endif -%}

    {% set events = place.events | list + place | walk('encloses') | map(attribute="events") | flatten | list %}
    <h2>{{ _('Events') }}</h2>
    {% with events=events, place_context=place %}
        {% include 'list-event.html.j2' %}
    {% endwith %}
{% endblock %}
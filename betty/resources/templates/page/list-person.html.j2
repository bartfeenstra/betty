{% extends 'base.html.j2' %}
{% set page_title = _('People') %}
{% block page_content %}
    {%- import 'macro/person.html.j2' as personMacros -%}
    <ul class="entities">
        {%- for person in entities | rejectattr('private', 'eq', True) | rejectattr('name', 'none') | sort(attribute='name') %}
            <li class="{{ loop.cycle('odd', 'even') }}">
                {{ personMacros.sortableLabel(person) }}
                {% include 'meta/person.html.j2' %}
            </li>
        {%- endfor -%}
    </ul>
{% endblock %}

{% set person_context = person_context | default(none) %}
{% set dated_events = entities | rejectattr('date', 'none') | selectattr('date.comparable') | list | sort(attribute='date') %}
{% if dated_events | length > 0 %}
    <ul class="entities">
        {% for entity in dated_events %}
            <li class="{{ loop.cycle('odd', 'even') }}">
                {% include ['entity/label-event.html.j2', 'entity/label.html.j2'] %}
                {% include ['entity/meta-event.html.j2', 'entity/meta.html.j2'] ignore missing %}
            </li>
        {% endfor %}
    </ul>
{% endif %}

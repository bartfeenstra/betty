{% extends 'base.html.j2' %}
{% set page_title = entity.location %}
{% block page_content %}
    <div class="meta">
    {% include ['entity/meta--citation.html.j2', 'entity/meta.html.j2'] ignore missing %}
    </div>
    {% set files = entity.files %}
    {% if files | length > 0 %}
        <section id="media">
            <h2>
                {% trans %}Media{% endtrans %}
                {% with url = page_resource | url ~ '#media'%}
                    {% include 'permalink.html.j2' %}
                {% endwith %}
            </h2>
            {% with entities = files %}
                {% include 'entity/list--file.html.j2' %}
            {% endwith %}
        </section>
    {% endif %}
    {% set facts = entity.facts | reject('has_generated_entity_id') | list %}
    {% if facts | length > 0 %}
        <section id="facts">
            <h2>
                {% trans %}Facts{% endtrans %}
                {% with url = page_resource | url ~ '#facts'%}
                    {% include 'permalink.html.j2' %}
                {% endwith %}
            </h2>
            <ul class="entities">
                {% for fact in facts %}
                    <li class="{{ loop.cycle('odd', 'even') }}">
                        {% with entity=fact, citation_context=entity %}
                        {% include ['entity/label--' + (entity.entity_type() | entity_type_name | camel_case_to_kebab_case) + '.html.j2', 'entity/label.html.j2'] %}
                        {% include ['entity/meta--' + (entity.entity_type() | entity_type_name | camel_case_to_kebab_case) + '.html.j2', 'entity/meta.html.j2'] ignore missing %}
                        {% endwith %}
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endif %}
{% endblock %}
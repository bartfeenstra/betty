{% set notes = notes | select('public') | list %}
{% if notes | length > 0 %}
    <section id="notes">
        <h2>
            {% trans %}Notes{% endtrans %}
            {% with url = page_resource | localized_url ~ '#notes'%}
                {% include 'permalink.html.j2' %}
            {% endwith %}
        </h2>
        {% for note in notes %}
            {{ note.text | localize | paragraphs }}
        {% endfor %}
    </section>
{% endif %}
[run]
branch = True
concurrency =
    thread
omit =
    betty/_bootstrap.py
    betty/_package/**
source = betty

[report]
exclude_also =
    ^\s*pragma: no cover$
    ^\s*def __repr__
    if TYPE_CHECKING:
    @abstractmethod
    @overload
    raise NotImplementedError
omit =
    betty/_bootstrap.py
    betty/_package/**
show_missing = True
skip_covered = True
skip_empty = True
